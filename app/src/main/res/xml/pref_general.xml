<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="@string/pref_key_general">
        <ListPreference
            android:defaultValue="@string/pref_sort_popular"
            android:entries="@array/pref_sort_options"
            android:entryValues="@array/pref_sort_values"
            android:key="@string/pref_sort_key"
            android:title="@string/pref_sort_label" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_hq_key"
            android:title="@string/pref_hq_label" />
    </PreferenceCategory>

</PreferenceScreen>
